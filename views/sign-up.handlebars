<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <form class="clearfix mb-4" action="POST">
        <div class="form-group" id="signup-form">
          <label for="signup-name">First Name</label>
          <input type="text" id="signup-first-name" class="form-control" aria-describedby="signup-name" placeholder="John Doe">
        </div>
        <div class="form-group" id="signup-form">
          <label for="signup-name">Last Name</label>
          <input type="text" id="signup-last-name" class="form-control" aria-describedby="signup-name" placeholder="John Doe">
        </div>
        <div class="form-group">
          <label for="signup-email">Email</label>
          <input type="text" id="signup-email" class="form-control" aria-describedby="signup-email" placeholder="john@gmail.com">
        </div>
        <div class="form-group">
          <label for="signup-password">Password</label>
          <input type="text" id="signup-password" class="form-control" aria-describedby="signup-password">
        </div>
        <button id="signup-submit" class="btn btn-primary float-right">Submit</button>
        <button id="get-user" class="btn btn-primary">Get User</button>
      </form>
    </div>
  </div>
</div>